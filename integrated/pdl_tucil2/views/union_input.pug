extends layout

block content
  - var d = JSON.parse(data)
  br

  .relation-1
   .row
    h3 Relation 1
   .row
    table.table-fill.treatment
      thead
        tr
          th.text-left no 
          th.text-left patient_id
          th.text-left doctor_id
          th.text-left room
          th.text-left disease
          th.text-left valid_start
          th.text-left valid_end
      tbody.table-hover
       - var a = d.documents
       each val, index in a 
        tr
          - var x = val.content.treatment
          - var y = val.metadataValues
          td.text-left= index+1 
          td.text-left= x.patient_id 
          td.text-left= x.doctor_id 
          td.text-left= x.room 
          td.text-left= x.disease
          td.text-left= y.validStart
          td.text-left= y.validEnd

  br 

  .relation-2
   .row
    h3 Relation 2
   .row
    table.table-fill.treatment
      thead
        tr
          th.text-left no 
          th.text-left patient_id
          th.text-left doctor_id
          th.text-left room
          th.text-left disease
          th.text-left valid_start
          th.text-left valid_end
      tbody.table-hover
       - var b = d.dummy_docs
       each val, index in b 
        tr
          - var x = val.content.treatment
          - var y = val.metadataValues
          td.text-left= index+1 
          td.text-left= x.patient_id 
          td.text-left= x.doctor_id 
          td.text-left= x.room 
          td.text-left= x.disease
          td.text-left= y.validStart
          td.text-left= y.validEnd

  br 
  .row
    form(action="/treatment/union/result" method="GET" class="form-registration").main-section
      br
      .row
        input(
          type="submit"
          value='Union'
          class="btn btn-lg btn-primary btn-block"
        )
      br

  br

